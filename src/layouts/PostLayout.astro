---
import StageIcon from '../components/StageIcon.astro'
import ReadingProgressBar from '../components/ReadingProgressBar.astro'
import Heading from '../components/Heading.astro'

const { frontmatter, headings } = Astro.props

---
<ReadingProgressBar />
<div class="post f-mb-2xl f-px-sm mx-auto max-w-[65ch]">
  <div class="f-mb-2xl flex flex-col items-center gap-4">
    <StageIcon stage={frontmatter.growthStage as
                     | "seedling"
                     | "budding"
                     | "evergreen"}/>
    <div class="f-pb-sm border-b-3 border-zinc-400">
      <h1 class="f-text-2xl font-light font-mono tracking-[0.05em] uppercase">{ frontmatter.title }</h1>
    </div>
  </div>
  <div class="mx-auto">
    <slot/>
  </div>
</div>
