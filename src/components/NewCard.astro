---
interface Props {
  title: string
  slug: string
  collection: string
  date: Date
}

const { title, slug, collection, date } = Astro.props

import Badge from './Badge.astro'
import Date from './Date.astro'
---

<a
  href={`/${slug}`}
  class="block f-p-xs rounded-xl bg-[rgb(45,45,52)] border border-[rgb(70,70,80)] hover:border-cornflower/50 transition-colors duration-200"
>
  <div class="f-my-6-10 f-mx-6-12 min-w-0">
    <div class="flex items-center gap-2 f-mb-4-6">
      <span class="text-emerald-400 f-text-sm" title="New content">+</span>
      <span class="f-text-2xs text-zinc-400 uppercase tracking-wide">New</span>
    </div>
    <h3 class="font-medium leading-snug text-zinc-200 f-text-sm">
      {title}
    </h3>
    <div class="f-mt-4-6 flex items-center gap-3">
      <span class="f-text-2xs text-zinc-500">
        <Date date={date} />
      </span>
      <Badge topic={collection} size="f-text-2xs" />
    </div>
  </div>
</a>
