---
import { Debug } from 'astro:components'
import { parseHTML } from 'linkedom'
import { slug } from 'github-slugger'

const headingHtml = await Astro.slots.render('default')
const { document } = parseHTML(headingHtml)
const theID = slug(document.toString())
const theLink = `#${theID}`
---

<h1
  id={theID}
  class="font-light font-headline f-text-xl f-mt-lg f-mb-md group/heading1 relative"
>
  <a
    href={theLink}
    class="absolute top--1 left--8 px-1 f-text-xl font-normal opacity-0 transition-opacity group-hover/heading1:opacity-100 duration-300 text-cornflower"
    >ยง</a
  >
  <Fragment set:html={document} />
</h1>
