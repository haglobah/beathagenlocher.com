---

const { title, topics, date } = Astro.props

import Badge from './Badge.astro'
import Date from './Date.astro'

---

<div class="f-my-sm f-p-xs grid rounded-xl bg-[rgb(51,51,57)] shadow-[inset_0_1px_0_0_rgba(148,163,184,0.1)] drop-shadow-lg">
  <div class="f-my-8-14 f-mx-6-12">
    <div class="f-mb-6-6 sm:absolute sm:f-top-sm sm:f-right-md f-text-2xs ">
      <Date date={date} />
    </div>
    <h3 class="font-medium leading-snug text-zinc-200">
      {title}
    </h3>
    <div class="f-my-8-14 f-text-xs">
      <slot />
    </div>
  </div>
  <div class="f-mx-4-8 flex">
    {topics !== "" && (
      <div class="flex flex-wrap">
        {topics.map(topic => <Badge topic={topic} size="f-text-2xs" />)}
      </div>
    )}
  </div>
</div>
