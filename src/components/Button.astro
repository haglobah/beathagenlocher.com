---
import type { HTMLAttributes } from 'astro/types'

// use a `type`
type Props = HTMLAttributes<'button'>

// or extend with an `interface`
interface Props extends HTMLAttributes<'button'> {
  myProp?: boolean
}

const { class: className, ...rest } = Astro.props
---

<button
  class:list={[
    'bg-zinc-800 border border-cornflower text-cornflower hover:bg-zinc-700 font-medium duration-300 ease-in-out f-py-xs f-px-sm rounded-lg shadow',
    className,
  ]}
  {...rest}
>
  <slot />
</button>
