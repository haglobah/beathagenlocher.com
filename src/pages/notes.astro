---
import Layout from '../layouts/Layout.astro'

import BadgeSelection from '../components/BadgeSelection.astro'
import ClampWrapper from '../components/ClampWrapper.astro'
import Heading from '../components/Heading.astro'

import Notes from '../content/notes.astro'
import { publishedNotes, draftNotes, getTopics } from '../content/content.ts'

const noteTopics = getTopics([publishedNotes, draftNotes])
---

<Layout title="Notes">
  <div class="f-mx-md">
    <ClampWrapper clampHeight="250">
      <BadgeSelection size="f-text-sm" topics={noteTopics} />
    </ClampWrapper>
    <div class="f-my-xl grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      <Heading>Notes</Heading>
      <Notes />
    </div>
  </div>
</Layout>

<script>
  import runInteraction from '../components/badgeSelectionInteraction.js'

  runInteraction()
</script>
